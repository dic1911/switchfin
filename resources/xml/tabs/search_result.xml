<brls:Box
    width="auto"
    height="auto">

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        grow="1.0">

        <brls:Box
            width="auto"
            height="auto"
            axis="column"
            paddingLeft="@style/main/content_padding_sides"
            paddingRight="@style/main/content_padding_sides"
            paddingTop="@style/main/content_padding_top_bottom"
            paddingBottom="@style/main/content_padding_top_bottom">

            <SearchList
                id="search/movie"
                title="@i18n/main/search/genres/movie"
                width="auto"
                height="350"
                itemType="Movie"
                pageSize="16" />

            <SearchList
                id="search/series"
                title="@i18n/main/search/genres/series"
                width="auto"
                height="350"
                itemType="Series"
                pageSize="16" />

            <SearchList
                id="search/episode"
                title="@i18n/main/search/genres/episode"
                width="auto"
                height="350"
                itemType="Episode"
                pageSize="16" />
        </brls:Box>

    </brls:ScrollingFrame>

    <ButtonClose
        positionType="absolute"
        positionTop="2"
        positionRight="2" />

</brls:Box>