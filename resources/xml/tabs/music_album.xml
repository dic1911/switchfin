<brls:Box
    width="auto"
    height="auto"
    paddingLeft="@style/brls/tab_frame/content_padding_sides"
    paddingRight="@style/brls/tab_frame/content_padding_sides"
    paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
    paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

    <brls:Box
        axis="column"
        padding="5"
        width="300"
        borderColor="@theme/brls/text">

        <brls:Box
            width="100%"
            height="350"
            axis="column"
            alignItems="center"
            paddingTop="15"
            justifyContent="spaceBetween">

            <brls:Image
                id="album/image/cover"
                scalingType="fit"
                width="240"
                height="240"
                marginBottom="15"
                backgroundColor="@theme/brls/header/border"
                image="@res/img/video-card-bg.png" />

            <brls:Label
                fontSize="18"
                wireframe="false"
                singleLine="true"
                id="album/label/title" />
            <brls:Label
                fontSize="16"
                id="album/label/artist" />
            <brls:Label
                id="album/label/year"
                fontSize="13"
                textColor="@theme/font/grey" />
        </brls:Box>

        <brls:Padding />

        <brls:Box
            id="album/stats" />
    </brls:Box>

    <RecyclingGrid
        grow="1"
        wireframe="false"
        paddingLeft="30"
        paddingRight="30"
        spanCount="1"
        flowMode="true"
        itemSpace="5"
        id="album/tracks"
        focusable="true" />

</brls:Box>