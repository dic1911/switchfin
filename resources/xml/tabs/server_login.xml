<brls:Box
    alignItems="center"
    justifyContent="center">

    <brls:Box
        width="50%"
        axis="column"
        alignItems="stretch">

        <brls:Header
            id="server/sigin_to" />


        <brls:InputCell
            id="server/user" />

        <brls:InputCell
            id="server/pass" />

        <brls:Button
            text="@i18n/main/setting/server/signin"
            marginTop="15"
            style="primary"
            fontSize="@style/brls/sidebar/item_font_size"
            id="server/signin" />

        <brls:Button
            text="@i18n/main/setting/quick_connect/header"
            marginTop="15"
            fontSize="@style/brls/sidebar/item_font_size"
            padding="12.5"
            id="server/quick_connect" />

    </brls:Box>
</brls:Box>