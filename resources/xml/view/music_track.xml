<brls:Box
    highlightCornerRadius="8"
    alignItems="center"
    padding="10">

    <brls:Label
        id="music/track/index"
        fontSize="@style/brls/header/font_size"
        textColor="@theme/brls/header/subtitle"
        width="30" />

    <brls:Box
        grow="1.0">
        <brls:Label
            id="music/track/name"
            fontSize="@style/brls/header/font_size" />
        <brls:Padding />
        <brls:Label
            id="music/track/artists"
            fontSize="15"
            textColor="@theme/brls/header/subtitle" />
    </brls:Box>

    <brls:Label
        id="music/track/duration"
        marginLeft="20"
        singleLine="true"
        fontSize="18" />

    <brls:Box
        id="music/track/favorite"
        visibility="invisible"
        hideHighlightBackground="true"
        highlightCornerRadius="100"
        marginLeft="10">
        <SVGImage
            height="20"
            width="20"
            svg="@res/icon/ico-heart.svg" />
    </brls:Box>

</brls:Box>