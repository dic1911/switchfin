<brls:Box
    highlightCornerRadius="8"
    alignItems="center"
    lineBottom="1"
    padding="5"
    lineColor="@theme/brls/header/border">

    <brls:Image
        id="playlist/item/picture"
        backgroundColor="@theme/color/grey_1"
        scalingType="fill"
        width="50"
        height="50"
        image="@res/img/video-card-bg.png"
        cornerRadius="4" />

    <brls:Box
        marginLeft="15"
        height="30"
        grow="1.0">
        <brls:Label
            id="playlist/item/name"
            singleLine="true"
            fontSize="@style/brls/header/font_size" />
        <brls:Padding />

        <brls:Label
            id="playlist/item/misc"
            singleLine="true"
            fontSize="15"
            textColor="@theme/brls/header/subtitle" />

        <brls:Box
            wireframe="false"
            alignItems="center"
            marginLeft="10"
            visibility="gone">
            <SVGImage
                width="15"
                height="15"
                svg="@res/icon/ico-star.svg" />
            <brls:Label
                id="playlist/item/rating"
                marginLeft="2"
                textColor="@theme/brls/header/subtitle"
                fontSize="15" />
        </brls:Box>
    </brls:Box>

    <brls:Label
        id="playlist/item/duration"
        marginLeft="20"
        singleLine="true"
        fontSize="18" />

    <brls:Box
        id="playlist/item/favorite"
        visibility="invisible"
        hideHighlightBackground="true"
        highlightCornerRadius="100"
        marginLeft="10">
        <SVGImage
            height="20"
            width="20"
            svg="@res/icon/ico-heart.svg" />
    </brls:Box>

</brls:Box>