<brls:Box
    highlightCornerRadius="8"
    padding="5">

    <brls:Box
        axis="row"
        width="300"
        alignItems="center">
        <brls:Box>
            <brls:Image
                id="video/card/picture"
                backgroundColor="@theme/color/grey_1"
                scalingType="fill"
                image="@res/img/video-card-bg.png" />

            <SVGImage
                id="video/card/badge/top"
                positionType="absolute"
                positionTop="8"
                positionRight="8"
                height="24" />

            <brls:Box
                wireframe="false"
                positionType="absolute"
                positionBottom="0"
                visibility="gone"
                width="100%"
                height="2"
                backgroundColor="#353535">
                <brls:Rectangle
                    id="video/card/progress"
                    height="2"
                    width="50%"
                    color="@theme/color/app" />
            </brls:Box>
        </brls:Box>
    </brls:Box>

    <brls:Box
        axis="column"
        width="530"
        marginLeft="20">
        <brls:Label
            id="episode/card/name"
            margin="10"
            singleLine="true"
            fontSize="18" />

        <TextBox
            id="episode/card/overview"
            grow="1"
            fontSize="15"
            maxRows="5"
            textColor="@theme/font/grey" />
    </brls:Box>

</brls:Box>